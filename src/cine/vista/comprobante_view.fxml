    <Label fx:id="lblPelicula"/>
    <Label fx:id="lblSala"/>
    <Label fx:id="lblButaca"/>
    <Label fx:id="lblCliente"/>
    <Label fx:id="lblFecha"/>

    <Button text="Volver" onAction="#onVolver"/>

