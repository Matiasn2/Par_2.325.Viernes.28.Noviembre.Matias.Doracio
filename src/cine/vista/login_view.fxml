<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cine.vista.LoginController"
      spacing="8"
      alignment="CENTER"
      style="-fx-padding:20;"
      prefWidth="300">

    <Label text="Sistema Cine - Login / Registro" style="-fx-font-size:16px;"/>

    <TextField fx:id="txtNombre" promptText="Nombre (solo para registro)"/>
    <TextField fx:id="txtEmail" promptText="Email"/>
    <PasswordField fx:id="txtContrasena" promptText="Contraseña"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Iniciar sesión" onAction="#onLogin"/>
        <Button text="Registrarse" onAction="#onRegistro"/>
    </HBox>

    <Label fx:id="lblInfo" style="-fx-text-fill:red;"/>

</VBox>

